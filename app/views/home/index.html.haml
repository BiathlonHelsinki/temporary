= content_for :header do
  .home_header
    = image_tag 'temporary_logo.png'
  .top-bar
    .top-bar-left
      %ul.menu
        %li= link_to 'About', '#'
        %li= link_to 'News', '#'
        %li= link_to 'Experiments', experiments_path
        %li= link_to 'Proposals', proposals_path
    .top-bar-right
      %ul.menu
        - if user_signed_in?
          %li= link_to 'My Biathlon', '#'
        - else
          %li= link_to 'Join!', '#'


.news_container
  - @news.each do |post|
    %article{class: cycle('odd', 'even')}
      .post
        .meta
          %span.date= post.published_at.strftime('%d.%m.%Y')
          = " / "
          %span.category= post.category_text
          = " / "
        .title= link_to post.title, post
        - if post.image?
          = image_tag post.image.url
        .body= raw post.body
    