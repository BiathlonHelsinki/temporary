.devise_new_session
  .row.expanded
    .small.12.columns.text-center
      %h1 Connect via
    
  = semantic_form_for(resource, :url => session_path(resource_name), :html => {:class => 'form-vertical' }) do |f|
    .row.expanded
      .small-6.medium-4.large-3.columns.text-center.option
        = link_to '/users/auth/facebook' do
          = fa_icon 'facebook'
          %p Facebook
      .small-6.medium-4.large-3.columns.text-center.option
        = link_to '/users/auth/google_oauth2' do
          = fa_icon 'google'
          %p Google
      .small-6.medium-4.large-3.columns.text-center.option
        = link_to '/users/auth/twitter' do
          = fa_icon 'twitter'
          %p Twitter
      .small-6.medium-4.large-3.columns.text-center.option
        = link_to '/users/auth/github' do
          = fa_icon 'github'
          %p GitHub
    .row.expanded#manual_login
      .small-10.medium-6.columns.small-centered
        %p
          = t(:sign_in_with_none)
          = link_to t(:sign_up_with_email), '/users/sign_up'
        #local_signin_form
          = semantic_form_for(resource, :url => session_path(resource_name), :html => {:class => 'form-vertical'}) do |f|
            = f.input :login, :label => t(:your_email)
            %label.label= t :password
            = f.password_field :password, autocomplete: "off"
            - if devise_mapping.rememberable?
              .field
                = f.check_box :remember_me
                = f.label :remember_me
            = f.submit t(:sign_in), :class => [:button, :radius]
            = link_to t(:forgot_your_password), '/users/password/new', class: [:button, :small, :forgot]
